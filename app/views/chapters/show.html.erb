<div style="margin:7%"></div>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title pdf_link"><%= @chapter.name %></h3>
        </div>
        <div class="panel-body pdf_link">
          <%= @chapter.details.html_safe %>
        </div>
      </div>
    </div>


   
    <div class="col-md-10 col-md-offset-1">
      <% @chapter.assignments.each do |assignment|%>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
            <ul>
            <div class="pull-right">
              <li><%= assignment.created_at.strftime("%d %b %Y")%></li></div> 
              <li>Assignment <%= assignment.id %></li>
            </ul>
            </h3>
          </div>
          <div class="panel-body">
            <% assignment.problems.each do |problem| %>
              <%= problem.question.html_safe %><br>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>