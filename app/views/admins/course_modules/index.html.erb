<p id="notice"><%= notice %></p>

<h1>Course Modules</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_modules.each do |course_module| %>
      <tr>
        <td><%= course_module.name %></td>
        <td><%= course_module.description %></td>
        <td><%= course_module.course %></td>
        <td><%= link_to 'Show', admins_course_module_path(course_module) %></td>
        <td><%= link_to 'Edit', edit_admins_course_module_path(course_module) %></td>
        <td><%= link_to 'Destroy', admins_course_module_path(course_module), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

