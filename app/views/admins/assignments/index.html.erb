<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.chapter_id %></td>
        <td><%= link_to 'Show', admins_assignment_path(assignment) %></td>
        <td><%= link_to 'Edit', edit_admins_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', admins_assignment_path(assignment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

