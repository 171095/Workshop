<%= form_for [:admins,faq] do |f| %>
  <% if faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% faq.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :course_id, :class => 'control-label col-lg-2' %>
  <%= f.select :course_id, options_for_select(Course.all.collect {|f| [ f.name, f.id ] },(f.object.try(:category_id))),{prompt: 'Select a course'}, { :class => 'form-control'} %>    
  <%=f.error_span(:course_id) %>

  <div class="field">
    <%= f.label :question %>
    <%= f.text_field :question %>
  </div>

  <div class="field">
    <%= f.label :answer %>
    <%= f.text_area :answer %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
