<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Course fees</th>
      <th>Course duration</th>
      <th>Banner image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.course_fees %></td>
        <td><%= course.course_duration %></td>
        <td><%= course.banner_image %></td>
        <td><%= link_to 'Show', admins_course_path(course) %></td>
        <td><%= link_to 'Edit', edit_admins_course_path(course) %></td>
        <td><%= link_to 'Destroy', admins_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

