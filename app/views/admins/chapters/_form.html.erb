      <h2><%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :details %>
    <%= f.text_area :details, class: "ckeditor" %>
  </div>

  <div class="field">
    <%= f.label :course_module_id %>
    <%= f.text_field :course_module_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
