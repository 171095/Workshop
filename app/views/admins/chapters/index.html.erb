<p id="notice"><%= notice %></p>

<h1>Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course module</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.try(:name) %></td>
        <td><%= chapter.course_module.try(:name) %></td>
        <td><%= link_to 'Show', admins_chapter_path(chapter) %></td>
        <td><%= link_to 'Edit', edit_admins_chapter_path(chapter)  %></td>
        <td><%= link_to 'Destroy', admins_chapter_path(chapter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter', new_admins_chapter_path %>
