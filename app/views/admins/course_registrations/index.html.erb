<p id="notice"><%= notice %></p>

<h1>Course Registrations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_registrations.each do |course_registration| %>
      <tr>
        <td><%= course_registration.first_name %></td>
        <td><%= course_registration.last_name %></td>
        <td><%= course_registration.contact %></td>
        <td><%= course_registration.email %></td>
        <td><%= course_registration.course %></td>
        <td><%= link_to 'Show', admins_course_registration_path(course_registration) %></td>
        <td><%= link_to 'Edit', edit_admins_course_registration_path(course_registration) %></td>
        <td><%= link_to 'Destroy', admins_course_registration_path(course_registration), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Registration', new_admins_course_registration_path, class: "btn btn-primary" %>
